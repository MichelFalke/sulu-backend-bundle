services:
    {{ bundle_prefix }}.admin:
{% set class = 'L91\\Sulu\\Bundle\\BackendBundle\\Admin\\BackendAdmin' %}
{% if extended %}
    {%- set class = namespace ~ '\\Admin\\' ~ entity_class ~ 'Admin' %}
{% endif %}
        class: {{ class }}
        arguments:
            - '@sulu_security.security_checker'
            - '%sulu_admin.name%'
{% if not extended %}
            - '{{ bundle_prefix }}.{{ entity|lower }}' # title main navigation
            - 'globe' # icon main navigation
            - '{{ js_bundle_name }}' # jsBundleName
            - {{ entity|lower }}:
                permission: {{ bundle_prefix|replace('_', '.') }}.{{ entity_pluralize|lower }} # permission for this menu point
                title: {{ bundle_prefix }}.{{ entity_pluralize|lower }} # menu title
                action: {{ bundle_namespace }}/{{ entity_pluralize|lower }} # menu routing action
            - Sulu: # securityContexts
                {{ entity }}:
                    - {{ bundle_prefix|replace('_', '.') }}.{{ entity_pluralize|lower }}
{% endif %}
        tags:
            - { name: sulu.admin }
            - { name: sulu.context, context: admin }
