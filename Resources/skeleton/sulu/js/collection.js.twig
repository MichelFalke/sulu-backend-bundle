define([
    'mvc/collection',
    '{{ js_bundle_name }}/model/{{ entity|snake_case('-') }}'
], function (Collection, Model) {

    return Collection({

        model: Model,

        url: function () {
            return '/admin/api/{{ bundle_namespace }}/{{ entity_pluralize|snake_case('-') }}';
        },

        fieldsUrl: function () {
            return '/admin/api/{{ bundle_namespace }}/{{ entity_pluralize|snake_case('-') }}/fields';
        },

        parse: function (resp) {
            return resp._embedded.{{ entity_pluralize|camelize }};
        }
    });
});
