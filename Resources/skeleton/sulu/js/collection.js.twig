define([
    'mvc/collection',
    '{{ js_bundle_name }}/model/{{ entity|lower }}'
], function (Collection, Model) {

    return Collection({

        model: Model,

        url: function () {
            return '/admin/api/{{ bundle_namespace }}/{{ entity_pluralize|lower }}';
        },

        fieldsUrl: function () {
            return '/admin/api/{{ bundle_namespace }}/{{ entity_pluralize|lower }}/fields';
        },

        parse: function (resp) {
            return resp._embedded.{{ entity_pluralize|lower }};
        }
    });
});
